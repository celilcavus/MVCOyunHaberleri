
@{
    ViewBag.Title = "ContactPage";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<style>
    .general textarea, input {
        margin: .5rem 0 .5rem 0;
        display: block;
    }
</style>

@model OyunHaberleri.Models.Data.iletisim

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();


    <div class=" form-group">
        @Html.Label("Ad")
        @Html.EditorFor(Model => Model.ad, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class=" form-group">
        @Html.Label("Soyad")
        @Html.EditorFor(Model => Model.soyad, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class=" form-group">
        @Html.Label("Email")
        @Html.EditorFor(Model => Model.email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class=" form-group">
        @Html.Label("Açıklama")
        @Html.TextAreaFor(Model => Model.aciklama, new { @class = "form-control",@style="height:250px" })
    </div>

    <button class="btn btn-danger" type="submit">Gönder</button>
}





